<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.AppTheme.UIExplorationsOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="strokeColor">?attr/colorControlNormal</item>
        <item name="rippleColor">@color/app_main_color</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.AppTheme.StatsView" parent="Theme.UIExplorations">
        <item name="android:layout_width">@dimen/stats_view_size</item>
        <item name="android:layout_height">@dimen/stats_view_size</item>
        <item name="textSize">@dimen/static_text</item>
        <item name="lineWidth">@dimen/indent</item>
        <item name="firstColor">@color/first_color_stats_view</item>
        <item name="secondColor">@color/second_color_stats_view</item>
        <item name="thirdColor">@color/third_color_stats_view</item>
        <item name="fourthColor">@color/fourth_color_stats_view</item>
        <item name="textColor">?attr/colorControlNormal</item>
    </style>

</resources>