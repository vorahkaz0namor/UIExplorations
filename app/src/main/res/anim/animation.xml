<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- repeatCount <=> Количество повторений -->
    <!-- repeatMode <=> Способ повторений -->
    <!-- duration <=> Продолжительность анимации, мс -->
    <!-- pivotX, pivotY <=> Центр вращения (в данном случае - центр окружности) -->
    <scale
        android:duration="1000"
        android:fromXScale="1.0"
        android:fromYScale="1.0"
        android:toXScale="1.25"
        android:toYScale="1.25"
        android:interpolator="@android:anim/linear_interpolator"
        android:repeatCount="3"
        android:repeatMode="reverse"
        />

    <rotate
        android:duration="1000"
        android:fromDegrees="0"
        android:toDegrees="360"
        android:pivotX="50%"
        android:pivotY="50%"
        android:repeatCount="1"
        android:repeatMode="reverse"
        android:startOffset="6000"
        />
</set>